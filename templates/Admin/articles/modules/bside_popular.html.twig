<div class="widget-box">
    <h3>δημοφιλη αρθρα</h3>
    {% for article in popularArticles %}
        <div class="pop-post">
            <div class="media">
                <div class="media-left">
                    <a href="{{ path('blog_view', {'slug': article.slug}) }}">
                        {% if article.image|length > 0 %}
                            <img class="media-object" src="{{ asset('uploads/articles/' ~ article.image) }}"
                                 alt="{{ article.name }}">
                        {% else %}
                            <img class="media-object" src="{{ asset('uploads/articles/' ~ article.image) }}"
                                 alt="{{ article.name }}">
                        {% endif %}
                    </a>
                </div>
                <div class="media-body">
                    <h6>{{ article.name }}</h6>
                    <a href="{{ path('blog_view', {'slug': article.slug}) }}"><strong>Περισσότερα</strong>
                        <i class="fa fa-arrow-right"></i>
                    </a>
                </div>
            </div>
            <ul>
                <li><i class="fa fa-calendar-o"></i>{{ article.createdAt|date('d-m-Y') }}</li>
                {#<li><i class="fa fa-comments-o"></i><a href="#">5 comment(s)</a></li>#}
            </ul>
        </div>
    {% endfor %}
</div>