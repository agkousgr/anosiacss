{% extends 'layout.html.twig' %}

{% block bodyId %}checkout{% endblock %}
{% block title %} | Checkout{% endblock %}
{% block slider %}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('build/css/orders.css') }}" rel="stylesheet"/>
{% endblock %}
{% block breadcrumb %}

{% endblock %}

{% block body %}
    {% include 'partials/sidebar_login.html.twig' %}
    {% include 'partials/swipe_menu.html.twig' %}
    {% include 'partials/site_header.html.twig' %}
    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-6"><h1>Ολοκλήρωση αγοράς</h1></div>
            </div>
        </div>
    </div>
    <div class="section" style="background-image:url({{ asset('images/bg-5.jpg') }});">
        <div class="container">
            <div class="row">
                {% for message in app.flashes('notice') %}
                    <div class="flash-notice">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('success') %}
                    <div class="flash-success">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
            <section id="main">
                <div class="container">
                    <div class="columns_inner">
                        {% if orderCompleted == true %}
                        <section id="content" class="page-content page-order-confirmation card">
                            <div class="card-block">
                                <div class="row">
                                    <div id="order-items" class="col-md-12">
                                        <h3 class="card-title h3">Προϊόντα παραγγελίας</h3>
                                        <div class="order-confirmation-table">
                                            <div class="order-line row">
                                                <div class="col-sm-2 col-xs-3">
                                                    <span class="image">
                                                        <img src="https://demo.templatetrip.com/Prestashop/PRS06/PRS176_gym/412-home_default/mountain-fox-cushion.jpg">
                                                    </span>
                                                </div>
                                                <div class="col-sm-4 col-xs-9 details">
                                                    <span>corporis suscipit libor</span>
                                                </div>
                                                <div class="col-sm-6 col-xs-12 qty">
                                                    <div class="row">
                                                        <div class="col-xs-5 text-sm-right text-xs-left">$18.90</div>
                                                        <div class="col-xs-2">2</div>
                                                        <div class="col-xs-5 text-xs-right bold">$37.80</div>
                                                    </div>
                                                </div>
                                            </div>
                                            <hr>
                                            <table>
                                                <tbody><tr>
                                                    <td>Subtotal</td>
                                                    <td>$45.36</td>
                                                </tr>
                                                <tr>
                                                    <td>Shipping and handling</td>
                                                    <td>Free</td>
                                                </tr>
                                                <tr class="font-weight-bold">
                                                    <td><span class="text-uppercase">Total</span> (tax incl.)</td>
                                                    <td>$45.36</td>
                                                </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div id="order-details" class="col-md-4">
                                        <h3 class="h3 card-title">Order details:</h3>
                                        <ul>
                                            <li>Order reference: QBVCSHUTW</li>
                                            <li>Payment method: Payments by check</li>
                                            <li>
                                                Shipping method: Demo Store<br>
                                                <em>Pick up in-store</em>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </section>
                        {% endif %}
                    </div>
                </div>
            </section>
        </div>
    </div>
    {% include 'home_page_modules/14_newsletter.html.twig' %}
    {% include 'home_page_modules/15_social.html.twig' %}
    {% include 'partials/footer.html.twig' %}
    </div>
{% endblock %}

