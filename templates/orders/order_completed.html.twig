{% extends 'layout.html.twig' %}

{% block bodyId %}checkout{% endblock %}
{% block title %} | Checkout{% endblock %}
{% block slider %}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('build/css/orders.css') }}" rel="stylesheet"/>
{% endblock %}
{% block breadcrumb %}

{% endblock %}

{% block body %}
    {% include 'partials/sidebar_login.html.twig' %}
    {% include 'partials/swipe_menu.html.twig' %}
    {% include 'partials/site_header.html.twig' %}
    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-6"><h1>Ολοκλήρωση αγοράς</h1></div>
            </div>
        </div>
    </div>
    <div class="section" style="background-image:url({{ asset('images/bg-5.jpg') }});">
        <div class="container">
            {% for message in app.flashes('notice') %}
                <div class="flash-notice">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('success') %}
                <div class="flash-success">
                    {{ message }}
                </div>
            {% endfor %}
            <section id="main">
                <div class="columns_inner">
                    {% if orderCompleted == true %}
                    <section id="content" class="page-content page-order-confirmation card">
                        <div class="card-block">
                            <div class="row">
                                <div id="order-items" class="col-md-12">
                                    <h3 class="card-title h3">Προϊόντα παραγγελίας</h3>
                                    <div class="order-confirmation-table">
                                        {% set cartSubTotal = 0 %}
                                        {% set cartTotal = 0 %}
                                        {% set cartShippingCost = 0 %}
                                        {% for pr in cartItems %}
                                        <div class="order-line row">
                                            <div class="col-sm-1 col-xs-3">
                                                <span class="image">
                                                    <img src="{{ pr.imageUrl }}">
                                                </span>
                                            </div>
                                            <div class="col-sm-7 col-xs-9 details">
                                                <span>{{ pr.name }}</span>
                                            </div>
                                            <div class="col-sm-4 col-xs-12 qty">
                                                <div class="row">
                                                    <div class="col-xs-5 text-sm-right text-xs-left">{{ pr.webPrice|number_format(2, ',', '.') }}€</div>
                                                    <div class="col-xs-2">{{ pr.quantity }}</div>
                                                    <div class="col-xs-5 text-xs-right bold">{{ (pr.webPrice|number_format(2, '.', ','))*pr.quantity }}€</div>
                                                </div>
                                            </div>
                                        </div>
                                        {% set cartSubTotal = cartSubTotal + (pr.webPrice|number_format(2, '.', ','))*pr.quantity %}
                                        {% endfor %}
                                        <hr>
                                        <table>
                                            <tbody><tr>
                                                <td>Μερικό σύνολο</td>
                                                <td>{{ cartSubTotal }}€</td>
                                            </tr>
                                            <tr>
                                                <td>Μεταφορικά</td>
                                                {% if checkout.shippingCost > 0 %}
                                                <td>{{ checkout.shippingCost|number_format(2, ',', '.') }}€</td>
                                                {% else %}
                                                    <td>Δωρεάν</td>
                                                {% endif %}
                                            </tr>
                                            {% if checkout.antikatavoliCost > 0 %}
                                            <tr>
                                                <td>Αντικαταβολή</td>
                                                <td>{{ checkout.antikatavoliCost|number_format(2, ',', '.') }}€</td>
                                            </tr>
                                            {% endif %}
                                            {% set cartTotal = cartSubTotal + checkout.shippingCost + checkout.antikatavoliCost %}
                                            <tr class="font-weight-bold">
                                                <td><span class="text-uppercase">ΣΥΝΟΛΟ</span> (συμπ. ΦΠΑ)</td>
                                                <td>{{ cartTotal|number_format(2, ',', '.') }}€</td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                {% if checkout.shippingType == '1000' %}
                                    {% set shippintMethod = 'Courier' %}
                                {% else %}
                                    {% set shippintMethod = 'Παραλαβή από το φαρμακείο' %}
                                {% endif %}
                                {% if checkout.paymentType == '1000' %}
                                    {% set paymentMethod = 'Πληρωμή στο κατάστημα' %}
                                {% elseif checkout.paymentType == '1001' %}
                                    {% set paymentMethod = 'Πιστωτική' %}
                                {% elseif checkout.paymentType == '1002' %}
                                    {% set paymentMethod = 'Paypal' %}
                                {% elseif checkout.paymentType == '1003' %}
                                    {% set paymentMethod = 'Αντικαταβολή' %}
                                {% elseif checkout.paymentType == '1004' %}
                                    {% set paymentMethod = 'Κατάθεση σε τράπεζα' %}
                                {% endif %}
                                <div id="order-details" class="col-md-6">
                                    <h3 class="h3 card-title">Λεπτομέρειες παραγγελίας:</h3>
                                    <ul>
                                        <li>Κωδικός παραγγελίας: {{ checkout.orderNo }}</li>
                                        <li>Τρόπος αποστολής: {{ shippintMethod }}</li>
                                        <li>
                                            Τρόπος πληρωμής: {{ paymentMethod }}<br>
                                            {#<em>Pick up in-store</em>#}
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </section>
                    {% endif %}
                </div>
            </section>
        </div>
    </div>
    {% include 'home_page_modules/14_newsletter.html.twig' %}
    {% include 'home_page_modules/15_social.html.twig' %}
    {% include 'partials/footer.html.twig' %}
    </div>
{% endblock %}

