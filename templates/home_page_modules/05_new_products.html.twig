<div class="section" style="background-color: #e6e6e6;">
    <div class="container">
        <div class="section-heading row wow flipInX" data-wow-delay="0.4s">
            <div class="col-sm-8 col-sm-offset-2 fb-section-header">
                {#<h3>Get ready for our</h3>#}
                <h2>ΝΕΕΣ</h2>
                <h1>ΑΦΙΞΕΙΣ</h1>
            </div>
        </div>

        <div class="owl-carousel owl-theme LatestProductsScroll product-main-slider">
            {% for pr in featured %}
                <div class="item">
                    <div class="product-case">
                        <div class="tag tag-green"><span>new</span></div>
                        <div class="product-img">
                            <div class="hover-img">
                                <a href="{{ path('product_view', {'slug': pr.slug}) }}"><img src="{{ asset(pr.imageUrl) }}" alt=""></a>
                            </div>
                            <a href="#">
                                <a href="{{ path('product_view', {'slug': pr.slug}) }}"><img src="{{ asset(pr.imageUrl) }}" alt=""></a>
                            </a>
                        </div>
                        <div class="hover-info">
                            <div class="product-short-info">
                                <div class="product-name">
                                    {% if pr.summary|length > 0 %}
                                        {#{% set text = pr.summary|render %}#}
                                        {% set hoverText = pr.summary|truncate(110, true)|raw %}
                                    {% else %}
                                        {% set hoverText = pr.name|title|truncate(100, true)|raw %}
                                    {% endif %}
                                    <a href="{{ path('product_view', {'slug': pr.slug}) }}">{{ hoverText }}</a>
                                </div>
                                <div class="product-price">
                                    <div class="product-price-span">
                                        Κωδ. {{ pr.prCode }}
                                    </div>
                                    {#<div class="product-price-span">{{ pr.webPrice }}€#}
                                    {#<del>{{ pr.retailPrice }}€</del>#}
                                    {#</div>#}
                                </div>
                                <button href="#"
                                        class="add-to-cart"
                                        data-id="{{ pr.id }}"
                                        data-name="{{ pr.name }}"
                                        type="button">
                                    <i class="fa fa-cart-plus"></i><span>στο καλαθι</span>
                                </button>
                            </div>
                        </div>
                        <div class="product-short-info">
                            <div class="product-name"><a href="#">{{ pr.name }}</a></div>
                            {#<div class="star"><i class="fa fa-star"></i><i class="fa fa-star"></i><i#}
                                        {#class="fa fa-star"></i><i class="fa fa-star"></i><i#}
                                        {#class="fa fa-star"></i><i#}
                                        {#class="fa fa-star-o"></i></div>#}
                            <div class="product-price">
                                <div class="product-price-span">{{  pr.webPrice }}€
                                    <del>{{ pr.retailPrice }}€</del>
                                </div>
                            </div>
                            <div>
                                <span itemprop="offers" itemscope=""
                                      itemtype="https://schema.org/Offer"
                                      class="availability">
                                    {#{% if (pr.remainNotReserved > "0" or pr.webFree == "true") and pr.outOfStock == "false" %}#}
                                    {% if pr.outOfStock == "false" and (pr.remainNotReserved|number_format() > 0 or pr.webFree == "true") %}
                                        <span class="available-now">
                                            <link itemprop="availability"
                                                  href="https://schema.org/InStock">
                                            Διαθέσιμο
                                        </span>
                                    {% else %}
                                        <span class="out-of-stock">
                                            <link itemprop="availability"
                                                  href="https://schema.org/InStock">
                                            Out of Stock
                                        </span>
                                    {% endif %}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>