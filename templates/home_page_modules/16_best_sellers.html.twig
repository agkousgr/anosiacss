                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                    </ul>
                    <ul class="resp-tabs-list hor_1 hidden" data-id="1929">
                        {% for ctg in categories|slice(2,1) %}
                            {% for subCtg in ctg.children %}
                                {% if subCtg.isVisible == true %}
                                    <li>{{ subCtg.name }}</li>
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                    </ul>
                    <ul class="resp-tabs-list hor_1 hidden" data-id="1867">
