                            {% for subCtg in ctg.children %}
                                {% if subCtg.isVisible == true %}
                                    <li>{{ subCtg.name }}</li>
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                    </ul>
                    <ul class="resp-tabs-list hor_1 hidden" data-id="1896">
                        {% for ctg in categories|slice(4,1) %}
                            {% for subCtg in ctg.children %}
                                {% if subCtg.isVisible == true %}
                                    <li>{{ subCtg.name }}</li>
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                    </ul>
                    <div id="best-seller-products" class="resp-tabs-container hor_1">
                        {% include 'home_page_modules/ajax_best_seller.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>