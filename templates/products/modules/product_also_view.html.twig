<div class="related-product">
    <h2 style="text-transform: none;">Όσοι ενδιαφέρθηκαν γι’ αυτό το προϊόν είδαν επίσης:</h2>
    <div class="owl-carousel owl-theme ProductRelatedScroll product-main-slider">
        {% for pr in popular %}
            <div class="item">
                <div class="product-case">
                    <div class="tag tag-green"><span>new</span></div>
                    <div class="product-img">
                        <div class="hover-img">
                            <a href="{{ path('product_view', {'id':pr.id}) }}"><img src="{{ pr.imageUrl }}" alt=""></a>
                        </div>
                        <a href="#">
                            <a href="{{ path('product_view', {'id':pr.id}) }}"><img src="{{ pr.imageUrl }}" alt=""></a>
                        </a>
                    </div>
                    <div class="hover-info">
                        <div class="product-short-info">
                            <div class="product-name">
                                {% if pr.summary|length > 0 %}
                                    {#{% set text = pr.summary|render %}#}
                                    {% set hoverText = pr.summary|truncate(110, true)|raw %}
                                {% else %}
                                    {% set hoverText = pr.name|title|truncate(100, true)|raw %}
                                {% endif %}
                                <a href="{{ path('product_view', {'id':pr.id}) }}">{{ hoverText }}</a>
                            </div>
                            {#<div class="star"><i class="fa fa-star"></i><i#}
                            {#class="fa fa-star"></i><i#}
                            {#class="fa fa-star"></i><i#}
                            {#class="fa fa-star"></i><i#}
                            {#class="fa fa-star"></i><i#}
                            {#class="fa fa-star-o"></i></div>#}
                            <div class="product-price">
                                <div class="product-price-span">
                                    Κωδ. {{ pr.prCode }}
                                </div>
                                {#<div class="product-price-span">{{ pr.webPrice }}#}
                                    {#€#}
                                    {#<del>{{ pr.retailPrice }}€</del>#}
                                {#</div>#}
                            </div>
                            <button href="#"
                                    class="add-to-cart"
                                    data-id="{{ pr.id }}"
                                    data-name="{{ pr.name }}"
                                    type="button">
                                <i class="fa fa-cart-plus"></i><span>στο καλαθι</span>
                            </button>
                        </div>
                    </div>
                    <div class="product-short-info">
                        <div class="product-name"><a href="{{ path('product_view', {'id': pr.id}) }}">{{ pr.name|title|preplace("σ", "ς") }}</a>
                        </div>
                        {#<div class="star"><i class="fa fa-star"></i><i#}
                        {#class="fa fa-star"></i><i class="fa fa-star"></i><i#}
                        {#class="fa fa-star"></i><i class="fa fa-star"></i><i#}
                        {#class="fa fa-star-o"></i></div>#}
                        <div class="product-price">
                            <div class="product-price-span">{{ pr.webPrice }}€
                                <del>{{ pr.retailPrice }}€</del>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}


    </div>
</div>