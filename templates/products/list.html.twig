{% macro create_breadcrumb(ctg, bc) %}
    {% import _self as macros %}
    {% if ctg.parent == null %}
        <a style="color: #fff;"
           href="{{ path('products_list', {'slug':ctg.slug}) }}">{{ ctg.name }}</a> {{ bc|raw }}
    {% else %}
        {% set bc = ' / <a style="color: #fff;" href="' ~ path('products_list', {'slug':ctg.slug}) ~ '">' ~ ctg.name ~ '</a>' ~ bc %}
        {{ macros.create_breadcrumb(ctg.parent, bc) }}
    {% endif %}
{% endmacro %}
{% import _self as func %}

{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .product-case .product-name {
            font-size: 16px;
            min-height: 80px;
        }

        .irs-from, .irs-to, .irs-single {
            background-color: #009836;
        }

        .irs-from:after, .irs-to:after, .irs-single:after {
            background-color: #009836;
        }
    </style>
    <link href="{{ asset('build/css/ion.rangeSlider.css') }}" rel="stylesheet"/>
    <link href="{{ asset('build/css/ion.rangeSlider.skinModern.css') }}" rel="stylesheet"/>
{% endblock %}
{% block bodyId %}category{% endblock %}
{% block title %}Products List{% endblock %}
{% block slider %}{% endblock %}
{% block breadcrumb %}

{% endblock %}

{% block body %}
    <div id="mainWrapper">
        {% include 'partials/sidebar_login.html.twig' %}
        {% include 'partials/sidebar_cart.html.twig' %}
        {% include 'partials/swipe_menu.html.twig' %}
        {% include 'partials/site_header.html.twig' %}
        <div class="page-header">
            <div class="container">
                <div class="row">

                    <div class="col-md-12">
                        {{ func.create_breadcrumb(ctgInfo, '') }}
                    </div>
                </div>
            </div>
        </div>
        {% if slider|length > 0 %}
            {% include 'products/modules/category_slider.html.twig' %}
        {% endif %}
        {#{% if (ctgInfo.children is not empty) %}#}
        {#{% include 'products/modules/top_categories.html.twig' %}#}
        {#{% endif %}#}
        <div class="section" style="background-image:url({{ asset('images/bg-5.jpg') }});">
            <div class="container">
                {% for message in app.flashes('notice') %}
                    <div class="flash-notice">
                        {{ message }}
                    </div>
                {% endfor %}
                <div class="row reverse-row">
                    <div class="col-md-9 column">
                        <div class="product-list">
                            <h2>{{ ctgInfo.name }}
                                {#{% set from = (products.currentPageNumber-1)*12 + 1 %}#}
                                {#{% set to = (products.currentPageNumber*12) %}#}
                                {#<span>(Εμφάνιση {{ from }} – {{ to }} προϊόντα σε σύνολο {{ products.getTotalItemCount }})</span>#}

                            </h2>
                            {% if (productsCount > 0 or products is defined) %}
                                <div class="sorting-head clearfix">
                                    <div class="row">
                                        <div class="col-sm-6 col-md-7 visible-lg visible-md  visible-sm">
                                            <div class="btn-group">
                                                <a href="#" id="list"
                                                   class="btn btn-default btn-sm"><i
                                                            class="fas fa-th-large"></i></a>
                                                <a href="#" id="grid"
                                                   class="btn btn-default btn-sm"><i
                                                            class="fas fa-th-list"></i></a>
                                            </div>
                                        </div>
                                        <div class="col-sm-6 col-md-5">
                                            <div class="row">
                                                <div class="col-xs-6 pull-right"> {# <== pull right tbd #}
                                                    <select name="sorting" id="sorting"
                                                            class="c-select">
                                                        {% set sortArr = {
                                                            'Όνομα Α->Ω':'NameAsc',
                                                            'Όνομα Ω->Α':'NameDesc',
                                                            'Τιμή Αύξουσα':'WebPriceAsc',
                                                            'Τιμή Φθίνουσα':'WebPriceDesc',
                                                        } %}
                                                        {% for key, value in sortArr %}
                                                            {% if sortBy == value %}
                                                                {% set selected='selected' %}
                                                            {% else %}
                                                                {% set selected='' %}
                                                            {% endif %}
                                                            <option {{ selected }}
                                                                    value="{{ value }}">{{ key }}</option>
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                                <div class="col-xs-6">
                                                    <select id="maxItemPerPage"
                                                            name="maxItemPerPage" class="c-select">
                                                        {% set paginationArr = [12, 18, 24, 30] %}
                                                        {% for value in paginationArr %}
                                                            {% if pagesize == value %}
                                                                {% set selected='selected' %}
                                                            {% else %}
                                                                {% set selected='' %}
                                                            {% endif %}
                                                            <option {{ selected }}
                                                                    value="{{ value }}">{{ value }}
                                                                προϊόντα
                                                            </option>
                                                        {% endfor %}

                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div id="products" class="row list-group list-products">
                                    {#{% set minPrice = minPrice %}#}
                                    {#{% set maxPrice = maxPrice %}#}
                                    {% for pr in products %}
                                        <div class="item col-lg-4 col-md-6 col-sm-6 wow fadeIn"
                                             data-wow-delay="0.4s">
                                            <div class="product-case">
                                                {% if pr.isNew == 'new' %}
                                                    <div class="tag tag-green">
                                                        <span>new</span>
                                                    </div>
                                                {% endif %}
                                                <div class="product-img">
                                                    {#<div class="hover-img"><a href="{{ path('product_view', {'id':pr.id}) }}"><img#}
                                                    {#src="{{ pr.imageUrl }}"#}
                                                    {#alt="{{ pr.name }}"></a>#}
                                                    {#</div>#}
                                                    <a href="{{ path('product_view', {'id':pr.id}) }}"><img
                                                                src="{{ pr.imageUrl }}"
                                                                alt="{{ pr.name }}"></a>
                                                </div>
                                                <div class="hover-info">
                                                    <div class="product-short-info">
                                                        <div class="product-name">
                                                            {% if pr.summary|length > 0 %}
                                                                {#{% set text = pr.summary|render %}#}
                                                                {% set hoverText = pr.summary|truncate(110, true)|raw %}
                                                            {% else %}
                                                                {% set hoverText = pr.name|title|truncate(100, true)|raw %}
                                                            {% endif %}
                                                            <a href="{{ path('product_view', {'id':pr.id}) }}">{{ hoverText }}</a>
                                                        </div>
                                                        {#<div class="star"><i class="fa fa-star"></i><i#}
                                                        {#class="fa fa-star"></i><i#}
                                                        {#class="fa fa-star"></i><i class="fa fa-star"></i><i#}
                                                        {#class="fa fa-star"></i><i class="fa fa-star-o"></i>#}
                                                        {#</div>#}
                                                        <div class="product-price">
                                                            <div class="product-price-span">
                                                                Κωδ. {{ pr.prCode }}
                                                            </div>
                                                            {#<div class="product-price-span">{{ pr.webPrice|number_format(2, ',', '.') }}#}
                                                            {#€#}
                                                            {#<del>{{ pr.retailPrice|number_format(2, ',', '.') }}#}
                                                            {#€#}
                                                            {#</del>#}
                                                            {#</div>#}
                                                        </div>
                                                        {% if pr.outOfStock == "false" %}
                                                            <button type="button"
                                                                    class="add-to-cart"
                                                                    data-id="{{ pr.id }}"
                                                                    data-name="{{ pr.name }}">
                                                                <i class="fas fa-cart-plus"></i><span>στο καλαθι</span>
                                                            </button>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                                <div class="product-short-info">
                                                    <div class="product-name">
                                                        <a href="{{ path('product_view', {'id':pr.id}) }}">{{ pr.name|title }}</a>
                                                    </div>
                                                    {#<div class="star"><i class="fa fa-star"></i><i class="fa fa-star"></i><i#}
                                                    {#class="fa fa-star"></i><i class="fa fa-star"></i><i#}
                                                    {#class="fa fa-star"></i><i class="fa fa-star-o"></i></div>#}
                                                    <div class="product-price">
                                                        <div class="product-price-span">{{ pr.webPrice|number_format(2, ',', '.') }}
                                                            €
                                                            <del>{{ pr.retailPrice|number_format(2, ',', '.') }}
                                                                €
                                                            </del>
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <span itemprop="offers" itemscope=""
                                                              itemtype="https://schema.org/Offer"
                                                              class="availability">
                                                            {#{% if (pr.remainNotReserved > "0" or pr.webFree == "true") and pr.outOfStock == "false" %}#}
                                                            {% if pr.outOfStock == "false" or pr.webFree == "true" %}
                                                                <span class="available-now">
                                                                    <link itemprop="availability"
                                                                          href="https://schema.org/InStock">
                                                                    Διαθέσιμο
                                                                </span>
                                                            {% else %}
                                                                <span class="out-of-stock">
                                                                    <link itemprop="availability"
                                                                          href="https://schema.org/InStock">
                                                                    Out of Stock
                                                                </span>
                                                            {% endif %}
                                                        </span>
                                                    </div>
                                                    <button type="button">
                                                        <i class="fa fa-cart-plus"></i>
                                                        <span>Add to Cart</span>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        {#{% if minPrice > pr.webPrice %}#}
                                        {#{% set minPrice = pr.webPrice|round %}#}
                                        {#{% endif %}#}
                                        {#{% if maxPrice < pr.webPrice %}#}
                                        {#{% set maxPrice = pr.webPrice|round %}#}
                                        {#{% endif %}#}
                                    {% endfor %}
                                </div>
                                <input type="hidden" name="minPrice" value="{{ minPrice|round }}">
                                <input type="hidden" name="maxPrice" value="{{ maxPrice|round }}">
                                {% if priceRange == 'null' %}
                                    <input type="hidden" name="lowPrice" value="{{ minPrice|round }}">
                                    <input type="hidden" name="highPrice" value="{{ maxPrice|round }}">
                                {% else %}
                                    {% set priceRangeArr = priceRange|split('-') %}
                                    <input type="hidden" name="lowPrice"
                                           value="{{ priceRangeArr.0 }}">
                                    <input type="hidden" name="highPrice"
                                           value="{{ priceRangeArr.1 }}">
                                {% endif %}
                                {#{{ dump(productsCount) }}#}
                                {#{{ dump(page*pagesize) }}#}
                                {% if productsCount > pagesize %}
                                    <nav aria-label="Page navigation">
                                        {{ include('products/modules/pagination.html.twig') }}
                                    </nav>
                                {% endif %}
                            {% else %}
                                <div class="col-12">
                                    Δεν υπάρχουν προϊόντα.
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-3 column">
                        <div class="filter-widget">
                            <h3 style="text-transform: none;">Αριθμός
                                προϊόντων: {{ productsCount }}</h3>
                        </div>
                        {#{% if (ctgInfo.children is not empty and ctgInfo.lvl > 2) %}#}
                        {#{% include 'products/modules/aside_category.html.twig' %}#}
                        {#{% endif %}#}
                        {% if (subCategories is not empty) %}
                            {% include 'products/modules/aside_category.html.twig' %}
                        {% endif %}
                        {% include 'products/modules/aside_shop_by_brand.html.twig' %}
                        {% include 'products/modules/aside_price_filter.html.twig' %}
                        {#{% include 'products/modules/aside_color_filter.html.twig' %}#}
                        {#{% include 'products/modules/aside_size.html.twig' %}#}
                        {#{% include 'products/modules/aside_discount.html.twig' %}#}
                        {#{% include 'products/modules/aside_clearance_sale.html.twig' %}#}
                        {#{% include 'products/modules/aside_best_sellers.html.twig' %}#}
                    </div>
                </div>
                {#{% include 'products/modules/bottom_product_tabs.html.twig' %}#}
                {#{% include 'products/modules/bottom_category_slider.html.twig' %}#}
                {#{% include 'products/modules/bottom_gallery_and_brands.html.twig' %}#}
                {#{% include 'products/modules/bottom_banners.html.twig' %}#}
            </div>
        </div>
        {% include 'home_page_modules/14_newsletter.html.twig' %}
        {#{% include 'home_page_modules/15_social.html.twig' %}#}
        {% include 'partials/footer.html.twig' %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/js/product-list.js') }}"></script>
{% endblock %}