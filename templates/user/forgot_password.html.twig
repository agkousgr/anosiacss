{% extends 'layout.html.twig' %}

{% block title %} | Forgot Password{% endblock %}

{% block body %}
    {% include 'partials/sidebar_login.html.twig' %}
    {% include 'partials/swipe_menu.html.twig' %}
    {% include 'partials/site_header.html.twig' %}
    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-6"><h1>Αίτηση Νέου Κωδικού</h1></div>
            </div>
        </div>
    </div>
    <div class="section" style="background-image:url({{ asset('images/bg-5.jpg') }});">
        <div class="container">
            <section id="main">
                    <div class="columns_inner">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="content">
                                    {% if error_message is defined %}
                                        <p class="alert alert-danger">{{ error_message }}</p>
                                    {% elseif success_message is defined %}
                                        <p class="alert alert-success">{{ success_message }}</p>
                                    {% endif %}
                                    <form action="{{ path('user_send_password_email') }}" method="post">
                                        <div class="form-group row">
                                            <div class="col-md-6">
                                                <input type="email" class="form-control" name="email" autofocus placeholder="E-mail" />
                                            </div>
                                            <div class="col-md-3">
                                                <button type="submit" class="btn btn-primary size-lg btn-block">Αίτηση Νέου Κωδικού</button>
                                            </div>
                                            <div class="col-md-3 form-control-comment"></div>
                                        </div>
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('forgot_password') }}" />
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
            </section>
        </div>
        {% include 'partials/footer.html.twig' %}
    </div>
{% endblock %}