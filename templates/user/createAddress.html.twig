{% extends 'layout.html.twig' %}

{% block bodyId %}my-account{% endblock %}
{% block title %} | Ο λογαριασμός μου{% endblock %}
{% block slider %}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('build/css/orders.css') }}" rel="stylesheet"/>
    <link href="{{ asset('build/css/user.css') }}" rel="stylesheet"/>
{% endblock %}
{% block breadcrumb %}

{% endblock %}

{% block body %}
    {% include 'partials/sidebar_login.html.twig' %}
    {% include 'partials/swipe_menu.html.twig' %}
    {% include 'partials/site_header.html.twig' %}
    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-6"><h1>Ο λογαριασμός μου - Προσθήκη διεύθυνσης</h1></div>
            </div>
        </div>
    </div>

    <div class="section" style="background-image:url({{ asset('images/bg-5.jpg') }});">
        <div class="container">
            <div class="row">
                {% for message in app.flashes('notice') %}
                    <div class="flash-notice">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('success') %}
                    <div class="flash-success">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
            <section id="main">
                <section id="content" class="page-content card card-block">
                    <aside id="notifications">
                        <div class="container">
                        </div>
                    </aside>
                    <div class="address-form">
                        <div class="js-address-form">
                            <form method="POST"
                                  action="//demo.templatetrip.com/Prestashop/PRS06/PRS176_gym/en/address?id_address=0"
                                  data-id-address="0"
                                  data-refresh-url="//demo.templatetrip.com/Prestashop/PRS06/PRS176_gym/en/address?ajax=1&amp;action=addressForm">
                                <section class="form-fields">
                                    <div class="form-group row ">
                                        <label class="col-md-3 form-control-label">
                                            Alias
                                        </label>
                                        <div class="col-md-6">
                                            <input class="form-control" name="alias" value="" maxlength="32"
                                                   type="text">
                                        </div>
                                        <div class="col-md-3 form-control-comment">
                                            Optional
                                        </div>
                                    </div>

                                    {{ form_start(formAddress) }}
                                    <div class="form-group row ">
                                        {{ form_label(formAddress.name, 'Ονομασία', {'label_attr': {'class': 'col-md-3 form-control-label required'}}) }}
                                        <div class="col-md-6">
                                            {{ form_widget(formAddress.name, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                        <div class="col-md-3 form-control-comment">
                                        </div>
                                    </div>
                                    <div class="form-group row ">
                                        {{ form_label(formAddress.address, 'Διεύθυνση', {'label_attr': {'class': 'col-md-3 form-control-label required'}}) }}
                                        <div class="col-md-6">
                                            {{ form_widget(formAddress.address, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                        <div class="col-md-3 form-control-comment">
                                        </div>
                                    </div>
                                    <div class="form-group row ">
                                        {{ form_label(formAddress.zip, 'Τ.Κ.', {'label_attr': {'class': 'col-md-3 form-control-label required'}}) }}
                                        <div class="col-md-6">
                                            {{ form_widget(formAddress.zip, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                        <div class="col-md-3 form-control-comment">
                                        </div>
                                    </div>
                                    <div class="form-group row ">
                                        {{ form_label(formAddress.address, 'Επώνυμο', {'label_attr': {'class': 'col-md-3 form-control-label required'}}) }}
                                        <div class="col-md-6">
                                            {{ form_widget(formAddress.address, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                        <div class="col-md-3 form-control-comment">
                                        </div>
                                    </div>
                                    <div class="form-group row ">
                                        {{ form_label(formAddress.address, 'Επώνυμο', {'label_attr': {'class': 'col-md-3 form-control-label required'}}) }}
                                        <div class="col-md-6">
                                            {{ form_widget(formAddress.address, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                        <div class="col-md-3 form-control-comment">
                                        </div>
                                    </div>
                                    <div class="form-group row ">
                                        {{ form_label(formAddress.address, 'Επώνυμο', {'label_attr': {'class': 'col-md-3 form-control-label required'}}) }}
                                        <div class="col-md-6">
                                            {{ form_widget(formAddress.address, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                        <div class="col-md-3 form-control-comment">
                                        </div>
                                    </div>
                                    {{ form_end(formAddress) }}

                                </section>


                                <footer class="form-footer clearfix">
                                    <input name="submitAddress" value="1" type="hidden">

                                    <button class="btn btn-primary float-xs-right" type="submit">
                                        Save
                                    </button>

                                </footer>


                            </form>
                        </div>


                    </div>

                </section>
                <footer class="page-footer">
                    <a href="https://demo.templatetrip.com/Prestashop/PRS06/PRS176_gym/en/my-account"
                       class="account-link">
                        <i class="material-icons"></i>
                        <span>Back to your account</span>
                    </a>
                    <a href="https://demo.templatetrip.com/Prestashop/PRS06/PRS176_gym/en/" class="account-link">
                        <i class="material-icons"></i>
                        <span>Home</span>
                    </a>
                </footer>
            </section>
        </div>
    </div>
    {% include 'home_page_modules/15_social.html.twig' %}
    {% include 'partials/footer.html.twig' %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/js/user-account.js') }}"></script>
{% endblock %}