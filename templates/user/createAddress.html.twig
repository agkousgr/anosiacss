{% extends 'layout.html.twig' %}

{% block bodyId %}my-account{% endblock %}
{% block title %} | Ο λογαριασμός μου{% endblock %}
{% block slider %}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('build/css/orders.css') }}" rel="stylesheet"/>
    <link href="{{ asset('build/css/user.css') }}" rel="stylesheet"/>
{% endblock %}
{% block breadcrumb %}

{% endblock %}

{% block body %}
    {#{% include 'partials/sidebar_login.html.twig' %}#}
    {% include 'partials/sidebar_cart.html.twig' %}
    {% include 'partials/swipe_menu.html.twig' %}
    {% include 'partials/site_header.html.twig' %}
    <div class="page-header">
        <div class="container">
            <div class="row">
                {% if (addressId|length > 0) %}
                    {% set title = 'Επεξεργασία διεύθυνσης' %}
                {% else %}
                    {% set title = 'Προσθήκη διεύθυνσης' %}
                {% endif %}
                <div class="col-md-12"><h1>Ο λογαριασμός μου - {{ title }}</h1></div>
            </div>
        </div>
    </div>

    <div class="section" style="background-image:url({{ asset('images/bg-5.jpg') }});">
        <div class="container">
            <div class="row">
                {% for message in app.flashes('notice') %}
                    <div class="flash-notice">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('success') %}
                    <div class="flash-success">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
            <section id="main">
                <section id="content" class="page-content card card-block">
                    <aside id="notifications">
                        <div class="container">
                        </div>
                    </aside>
                    <div class="address-form">
                        <div class="js-address-form">
                            {{ form_start(formAddress) }}
                            <section class="form-fields">
                                <div class="form-group row ">
                                    {{ form_label(formAddress.name, 'Ονομασία', {'label_attr': {'class': 'col-md-3 form-control-label required'}}) }}
                                    <div class="col-md-6">
                                        {{ form_widget(formAddress.name, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-md-3 form-control-comment">
                                    </div>
                                </div>
                                <div class="form-group row ">
                                    {{ form_label(formAddress.address, 'Διεύθυνση', {'label_attr': {'class': 'col-md-3 form-control-label required'}}) }}
                                    <div class="col-md-6">
                                        {{ form_widget(formAddress.address, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-md-3 form-control-comment">
                                    </div>
                                </div>
                                <div class="form-group row ">
                                    {{ form_label(formAddress.zip, 'Τ.Κ.', {'label_attr': {'class': 'col-md-3 form-control-label required'}}) }}
                                    <div class="col-md-6">
                                        {{ form_widget(formAddress.zip, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-md-3 form-control-comment">
                                    </div>
                                </div>
                                <div class="form-group row ">
                                    {{ form_label(formAddress.city, 'Πόλη', {'label_attr': {'class': 'col-md-3 form-control-label required'}}) }}
                                    <div class="col-md-6">
                                        {{ form_widget(formAddress.city, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-md-3 form-control-comment">
                                    </div>
                                </div>
                                <div class="form-group row ">
                                    {{ form_label(formAddress.district, 'Περιοχή', {'label_attr': {'class': 'col-md-3 form-control-label required'}}) }}
                                    <div class="col-md-6">
                                        {{ form_widget(formAddress.district, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-md-3 form-control-comment">
                                    </div>
                                </div>
                                {#<div class="form-group row ">#}
                                {#{{ form_label(formAddress., 'Τηλέφωνο', {'label_attr': {'class': 'col-md-3 form-control-label required'}}) }}#}
                                {#<div class="col-md-6">#}
                                {#{{ form_widget(formAddress.address, {'attr': {'class': 'form-control'}}) }}#}
                                {#</div>#}
                                {#<div class="col-md-3 form-control-comment">#}
                                {#</div>#}
                                {#</div>#}

                            </section>


                            <footer class="form-footer clearfix">
                                <input name="submitAddress" value="1" type="hidden">

                                <button class="btn btn-primary float-xs-right" type="submit">
                                    Αποθήκευση
                                </button>

                            </footer>
                            {{ form_end(formAddress) }}


                            </form>
                        </div>


                    </div>

                </section>
                <footer class="page-footer">
                    <a href="{{ path('user_account') }}"
                       class="account-link">
                        <i class="material-icons"></i>
                        <span>Επιστροφή στο λογαριασμό σας</span>
                    </a>
                    <a href="{{ path('index') }}" class="account-link">
                        <i class="material-icons"></i>
                        <span>Home</span>
                    </a>
                </footer>
            </section>
        </div>
    </div>
    {#{% include 'home_page_modules/15_social.html.twig' %}#}
    {% include 'partials/footer.html.twig' %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/js/user-account.js') }}"></script>
{% endblock %}